{
  "name": "mosca",
  "version": "2.8.3",
  "description": "MQTT broker as a module",
  "main": "index.js",
  "bin": {
    "mosca": "./bin/mosca"
  },
  "scripts": {
    "test": "mocha --recursive --bail --reporter spec test 2>&1",
    "ci": "mocha --recursive --bail --watch test",
    "coverage": "rm -rf coverage; istanbul cover _mocha -- --recursive --reporter spec --bail",
    "publish-coverage": "(cat coverage/lcov.info | coveralls)",
    "jshint-lib": "jshint lib",
    "jshint-test": "jshint test",
    "start": "./bin/mosca -v | bunyan",
    "bundle": "browserify -r mqtt -s mqtt | uglifyjs --ie8 > public/mqtt.js",
    "prepublish": "npm run bundle"
  },
  "pre-commit": [
    "jshint-lib",
    "jshint-test",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mcollina/mosca.git"
  },
  "bugs": {
    "url": "http://github.com/mcollina/mosca/issues"
  },
  "engines": {
    "node": ">= 0.12"
  },
  "keywords": [
    "mqtt",
    "mqtt server",
    "publish",
    "subscribe",
    "pubsub",
    "rabbitmq",
    "zeromq",
    "0mq",
    "amqp",
    "mosquitto",
    "websocket"
  ],
  "author": "Matteo Collina <hello@matteocollina.com>",
  "license": "MIT",
  "devDependencies": {
    "browserify": "~16.2.3",
    "chai": "^4.2.0",
    "coveralls": "~3.0.2",
    "dox-foundation": "~0.5.4",
    "istanbul": "~0.4.0",
    "jshint": "~2.9.1",
    "mocha": "^5.2.0",
    "mongo-clean": "^2.0.0",
    "osenv": "^0.1.0",
    "pre-commit": "1.2.2",
    "rimraf": "^2.2.8",
    "sinon": "~7.2.2",
    "sinon-chai": "~3.3.0",
    "supertest": "~3.3.0",
    "tmp": "0.0.33",
    "uglify-js": "^3.4.9",
    "underscore": "^1.7.0",
    "ws": "^6.1.2"
  },
  "dependencies": {
    "array-from": "^2.1.1",
    "ascoltatori": "https://github.com/danclive/ascoltatori.git",
    "brfs": "~2.0.1",
    "clone": "^2.1.2",
    "commander": "~2.19.0",
    "deepcopy": "^1.0.0",
    "escape-string-regexp": "^1.0.5",
    "extend": "^3.0.0",
    "json-buffer": "~3.0.1",
    "jsonschema": "^1.0.3",
    "level-sublevel": "^6.5.2",
    "levelup": "^4.0.0",
    "lru-cache": "~5.1.1",
    "memdown": "~3.0.0",
    "minimatch": "~3.0.0",
    "moving-average": "1.0.0",
    "mqtt": "^2.18.8",
    "mqtt-connection": "^4.0.0",
    "msgpack5": "^4.2.1",
    "nanoid": "^2.0.0",
    "pbkdf2-password": "^1.1.0",
    "pino": "^5.10.6",
    "qlobber": "~3.0.2",
    "retimer": "^2.0.0",
    "st": "^1.1.0",
    "steed": "^1.0.0",
    "uuid": "^3.3.2",
    "websocket-stream": "~5.1.2"
  },
  "optionalDependencies": {
    "amqp": "~0.2.4",
    "ioredis": "^4.3.0",
    "leveldown": "~4.0.1",
    "mongodb": "~3.1.10"
  }
}
